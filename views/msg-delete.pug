extends layout

block content
    h1 Delete Message

    div
        p #[strong !{message.title}]
        p #{message.message}

        p #{message.username}
        p #{message.postDate_formatted}

    div
        p Are You Sure You Want to Delete This Message?

    form(method='POST' action='')
        div
            input(type='hidden', name='id', required='true', value=message._id)

        button(type='submit') Delete

extends layout

block content
    div.page-info
        div.page-title
            h1 Post a new message

        form.normal-form(method='POST' action='')
            div.form-controller
                p
                    label(for='title') #[strong Title:] 
                    input(name='title' placeholder='Message Title' type='text' required='true' value=(undefined===message ? '' : message.title))
            div.form-controller
                p
                    label(for='message') #[strong Message:] 
                    textarea( name='message' placeholder='Message Content' required='true') #{undefined===message ? '' : message.message}
            div.form-controller
                button(type='submit') Submit

        div.form-errors
            if errors
                ul
                    for error in errors
                        li #[strong !{error.msg}]

        div.form-controller
            p
                a(href=('/')) #[strong Return to Homepage]
